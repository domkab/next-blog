laurynogargasoapiserver.xyz {

  encode zstd gzip
  header {
    Strict-Transport-Security "max-age=31536000; includeSubDomains; preload"
  }

  handle_path /uploads/* {
    root * /app/src
    file_server
  }

  handle {
    reverse_proxy nextblog:3000
  }

  log {
    output file /var/log/caddy/access.log
  }
}
laurynogargasoapiserver.xyz {
  root * /var/www/html
  file_server

  @next path /api/* /admin/* /_next/* /posts/* /
  reverse_proxy @next nextblog:3000

  handle /netdata/* {
    uri strip_prefix /netdata
    reverse_proxy 127.0.0.1:19999
  }

  handle /report.html {
    file_server
    root * /var/www/html
  }

  log {
    output file /var/log/caddy/access.log
  }
}